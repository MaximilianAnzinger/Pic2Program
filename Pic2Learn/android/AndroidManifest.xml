<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.p2l">

    <uses-feature android:name="android.hardware.camera2.full" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mpic"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".ui.menu.mainmenu.MainActivity"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ingame.fragments.AndroidLauncher"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.menu.selectors.TutorialLevelSelector"
            android:parentActivityName=".ui.menu.mainmenu.MainActivity"
            android:screenOrientation="portrait">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.p2l.ui.menu.mainmenu.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ingame.fragments.PlayScreen"
            android:label="@string/title_activity_play_screen"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.shop.Shop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.menu.selectors.EasyLevelSelector"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.menu.selectors.MiddleLevelSelector"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.menu.selectors.DiffLevelSelector"
            android:screenOrientation="portrait" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name=".ui.shop.Skins" />
        <activity android:name=".ui.shop.Accessoires" />
        <activity android:name=".ui.shop.Tips" />
        <activity
            android:name=".ui.ingame.camera.CameraUI"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ingame.camera.CameraActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>