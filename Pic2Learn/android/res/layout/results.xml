    <ImageView
        android:id="@+id/starImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/headerTextView"
        android:layout_alignTop="@+id/starImage2"
        android:visibility="visible"
        android:src="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/starImage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/headerTextView"
        android:layout_alignEnd="@+id/headerTextView"
        android:layout_marginBottom="-49dp"
        android:src="@android:drawable/btn_star_big_on" />

</RelativeLayout>