<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="430dp"
    android:background="@drawable/popupborder">

    <TextView
        android:id="@+id/symbolsHeader"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Strukturelemente"
        android:textSize="20sp" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:onClick="goBackBtn"
        android:text="weiter" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/symbolsHeader"
        android:layout_toStartOf="@+id/symbolsHeader"
        app:srcCompat="@drawable/loopkey" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView15"
        android:layout_toStartOf="@+id/symbolsHeader"
        app:srcCompat="@drawable/branchkey" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView16"
        android:layout_toStartOf="@+id/symbolsHeader"
        app:srcCompat="@drawable/blockend" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/symbolsHeader"
        android:layout_marginStart="3dp"
        android:layout_alignStart="@+id/symbolsHeader"
        android:text="                                                                      Schleife"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView15"
        android:layout_marginStart="3dp"
        android:layout_alignStart="@+id/symbolsHeader"
        android:text="                                                                      Verzweigung"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView16"
        android:layout_marginStart="3dp"
        android:layout_alignStart="@+id/symbolsHeader"
        android:text="                                                                      Blockende"
        android:textSize="16sp" />


</RelativeLayout>