<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="300dp"
    android:background="@drawable/popupborder">

    <TextView
        android:id="@+id/textView"
        android:layout_width="229dp"
        android:layout_height="222dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Willkommen bei Pic2Learn! Falls du zum ersten Mal spielst, klicke auf das Menü-Symbol oben rechts und lies dir das Spielprinzip als auch die Steuerung durch! Bei Problemen kannst du die Anmerkungen des jeweiligen Levels prüfen.                         Viel Spaß!"
        android:textSize="18sp" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:onClick="goBackBtn"
        android:text="okay" />
</RelativeLayout>